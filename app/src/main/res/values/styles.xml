<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Joel" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/joelPrimary</item>
        <item name="colorPrimaryDark">@color/joelPrimaryDark</item>
        <item name="colorAccent">@color/joelAccent</item>
        <item name="android:statusBarColor">@color/joelPrimaryDark</item>
        <item name="android:windowBackground">@color/joelWindowBackground</item>
        <item name="table_data_row_even">@color/joeldata_row_even</item>
        <item name="table_data_row_odd">@color/joeldata_row_odd</item>
        <item name="table_header_text">@color/joeldata_header_text</item>
        <item name="tableView_headerColor">#ffcb00</item>
    </style>

    <style name="Theme.Joel.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.Mad" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorPrimary">@color/madPrimary</item>
        <item name="colorPrimaryDark">@color/madPrimaryDark</item>
        <item name="colorAccent">@color/madAccent</item>
        <item name="android:statusBarColor">@color/madPrimaryDark</item>
        <item name="android:windowBackground">@color/madWindowBackground</item>
        <item name="table_data_row_even">@color/maddata_row_even</item>
        <item name="table_data_row_odd">@color/maddata_row_odd</item>
        <item name="table_header_text">@color/maddata_header_text</item>
        <item name="tableView_headerColor">@color/maddata_headerColor</item>
    </style>

    <style name="Theme.Mad.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Zimmik" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorPrimary">@color/zimPrimary</item>
        <item name="colorPrimaryDark">@color/zimPrimaryDark</item>
        <item name="colorAccent">@color/zimAccent</item>
        <item name="android:statusBarColor">@color/zimPrimaryDark</item>
        <item name="android:windowBackground">@color/zimWindowBackground</item>
        <item name="table_data_row_even">@color/zimdata_row_even</item>
        <item name="table_data_row_odd">@color/zimdata_row_odd</item>
        <item name="table_header_text">@color/zimdata_header_text</item>
        <item name="tableView_headerColor">@color/zimdata_headerColor</item>
    </style>

    <style name="Theme.Zimmik.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
